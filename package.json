{
  "name": "docx-to-markdown-converter",
  "version": "1.1.0",
  "description": "将docx文件转换为Markdown格式的工具",
  "main": "index.js",
  "bin": {
    "docx2md": "./index.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "build": "pkg index.js --out-path dist",
    "build:win": "pkg index.js --targets node16-win-x64 --out-path dist",
    "build:mac": "pkg index.js --targets node16-macos-x64 --out-path dist",
    "build:linux": "pkg index.js --targets node16-linux-x64 --out-path dist",
    "build:all": "pkg index.js --targets node16-win-x64,node16-macos-x64,node16-linux-x64 --out-path dist"
  },
  "keywords": [
    "docx",
    "markdown",
    "converter",
    "document"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "mammoth": "^1.11.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": [
      "converter.js"
    ],
    "assets": [
      "node_modules/**/*"
    ],
    "targets": [
      "node16-win-x64",
      "node16-macos-x64",
      "node16-linux-x64"
    ]
  }
}